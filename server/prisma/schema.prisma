datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  password   String
  profileImage String?
  notes   Note[]
}

model Note {
  id      Int      @id @default(autoincrement())
  title  String
  content String
  date    DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
}